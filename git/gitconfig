	name = Vin√≠cius Oliveira
	email = me@vinioliveira.com
[core]
	excludesfile = ~/.gitignore_global

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[color]
  ui = auto
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[push]
	default = current

[alias]
  a      = add
  aa     = !git add -u && git add . && git status
  b      = branch
  c      = commit -m
  co     = checkout
  d      = diff
  delete-merged-branches = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
  m      = merge --no-ff
  nb     = checkout -b
  o      = browse
  op     = browse -- pulls
  p      = push
  pf     = push --force
  pr     = pull-request
  rename = branch -m
  s      = status
  st     = stash
  up     = !git pull --rebase origin \"$(git rev-parse --abbrev-ref HEAD)\"

[merge]
	tool = gitx
